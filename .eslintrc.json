{
  "root": true,
  "extends": [
    "eslint:recommended", //regular rules
    "plugin:import/errors", //plugins for enhanced erros
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7, //ES2016
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
      "no-console": 1
  }
}
